@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Lista de Productos";
}

<h2>Lista de Productos</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>PRECIO</th>
            <th>FECHA DE VENCIMIENTO</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productos in Model)
        {
            <tr>
                <td>@productos.ProductoID</td>
                <td>@productos.Nombre</td>
                <td>@productos.Precio</td>
                <td>@productos.FechaVencimiento</td>
            </tr>
        }
    </tbody>
</table>
<button id="createProductoButton" class="btn btn-primary">Crear Producto</button>

<!-- Modal -->
<div class="modal fade" id="ViewProductoModal" tabindex="-1" role="dialog" aria-labelledby="createProductoLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createProductoLabel">Crear Producto</h5>
                <button type="button" class="close" data-dismiss="modal" arial-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- El contenido del modal se carga aquí -->
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
    $(document).ready(function () {
        // Cargar el contenido del modal
        $('#createProductoButton').click(function () {
            $.ajax({
                type: "GET",
                url: "/ProductoAjax/CreateProducto",
                success: function (response) {
                    alert(response);
                    $('.modal-body').html(response);
                    $('#ViewProductoModal').modal('show');
                },
                error: function () {
                    alert('Hubo un error al cargar el formulario.');
                }
            });
        });
    });
</script>